---
import { Image, Picture } from "@astrojs/image/components";
import Bubbles from "./bubbles.astro";
import HeroImage from "~/components/hero-image.astro";
import PerformerBoth from "../assets/performer_both.webp";
import WordmarkVertical from "../assets/wordmark-vertical.svg";
const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full z-auto max-w-full">
  <Bubbles />
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full sm:grid-cols-2 place-items-center">
    <div
      class="grid self-end gap-2 w-1/2 sm:w-2/5 max-w-l md:gap-4 sm:self-auto sm:justify-self-auto"
    >
      <Image
        class="object-cover w-full h-full"
        src={WordmarkVertical}
        alt="wordmark of Drag It Out"
        width="345"
        aspectRatio={345 / 385}
      />
    </div>
    <div
      class="self-start w-2/3 max-w-3xl sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Picture
        src={PerformerBoth}
        class="animate-float object-cover w-full h-full"
        widths={widths}
        sizes={sizes}
        height={"auto"}
        loading={"eager"}
        formats={["avif", "png", "webp"]}
        alt="A drag performer appearing in the void"
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  img.animate-float {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    img.animate-float {
      @apply animate-none;
    }

    :global(#bubblefield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
