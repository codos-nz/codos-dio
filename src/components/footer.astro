---
export const prerender = true;
import { Icon } from "astro-icon";
import Bubbles from "~/components/bubbles.astro";

const links = [
  {
    url: "mailto:info@dragitout.co.nz",
    description: "Write to Drag It Out",
    icon: "mdi:email",
  },
  {
    url: "https://facebook.com/Dragitoutchch",
    description: "Drag It Out on Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://instagram.com/dragitoutentertainment",
    description: "Drag It Out on Instagram",
    icon: "fa-brands:instagram",
  },
];
---

<footer class="relative flex flex-col items-center justify-center h-64">
  <div class="absolute inset-0 overflow-hidden opacity-50">
    <Bubbles />
  </div>
  <ul class="relative grid grid-cols-3 gap-3 sm:grid-cols-3">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
  <p class="opacity-60 z-10">
    built with ‚ù§ by <a href="https://codos.co.nz">CODOS</a>
  </p>
</footer>
